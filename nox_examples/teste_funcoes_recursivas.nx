// 1. FATORIAL RECURSIVO
// ============================================
print(">> 1. FATORIAL RECURSIVO")

func fatorial_recursivo(n: int) -> int
    if n <= 1 then
        return 1
    else
        return n * fatorial_recursivo(n - 1)
    end
end

