// ============================================
print(">> 2. FIBONACCI RECURSIVO")

func fibonacci_recursivo(n: int) -> int
    if n <= 1 then
        return n
    else
        return fibonacci_recursivo(n - 1) + fibonacci_recursivo(n - 2)
    end
end

